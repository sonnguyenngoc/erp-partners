<% content_for :title do %>
    <%= t('.partners') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-handshake"></i> <%= t('.partners') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_partners.new_backend_partner_path,
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_partners.list_backend_partners_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_partners_partners.name'
        }
    ],
    actions: [
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.birth'), name: 'birth', value: true, checked: true
        },
        {
            text: t('.owner'), name: 'owner', value: true, checked: true
        },
        {
            text: t('.website'), name: 'website', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_partners_partners.created_at', sort_direction: 'desc' }
) %>