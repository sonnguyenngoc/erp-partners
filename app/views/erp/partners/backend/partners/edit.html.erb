<% content_for :title do %>
    <%= @partner.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_partners.backend_partners_path %>">
    <i class="fa fa-handshake"></i> <%= t('.partners') %>
    </a> / <%= @partner.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_partners.new_backend_partner_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @partner.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', partner: @partner %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>